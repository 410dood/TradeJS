{
  "name": "TradeJS",
  "version": "0.0.11",
  "description": "Javascript Trading Client",
  "main": "index.js",
  "license": "Apache License 2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/DutchKevv/TradeJS.git"
  },
  "keywords": [
    "TradeJS",
    "Stock",
    "Forex",
    "Trade",
    "Trading",
    "Node",
    "Trading",
    "NodeJS"
  ],
  "scripts": {
    "_postinstall": "electron-rebuild",
    "install": "cd ./server && npm i && cd ../client && npm i",
    "client:dev": "cd ./client && npm run dev",
    "client:build": "cd ./client && npm run build",
    "server:dev": "cd ./server && npm run dev",
    "server:build": "cd ./server && npm run build",
    "server:prod": "cd ./server && npm run prod",
    "electron:build": "electron-packager ./ TradeJS --platform=darwin --overwrite --ignore=/e2e --ignore=/src/client",
    "electron:rebuild": "electron-rebuild ./ TradeJS --platform=darwin --overwrite --ignore=/e2e --ignore=/src/client -f -w sqlite3",
    "electron:dev": "npm run _electron",
    "electron:prod": "npm run build && NODE_ENV=production npm run _electron",
    "_electron": "DEBUG=TradeJS:* electron --js-flags=\"--harmony_async_await\" ./ --electron=true"
  },
  "author": "Kewin Brandsma",
  "private": false,
  "directories": {
    "app": "./",
    "out": "/Users/kewinbrandsma/Desktop",
    "buildResources": "./"
  },
  "build": {
    "npmRebuild": false,
    "productName": "TradeJS",
    "appId": "tradejs",
    "mac": {
      "category": "your.app.category.type"
    },
    "win": {
      "iconUrl": "(windows-only) https link to icon"
    },
    "files": [
      "dist/**/*",
      "config/**/*",
      "src/**/*",
      "!src/client${/*}",
      "_npm_module_backup",
      "doc/**/*",
      "gulpfile.js",
      "readmy.md",
      "tsconfig.json",
      "tslint.json",
      "index.js"
    ]
  }
}
