{
  "compilerOptions": {
     "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es6", "es2016", "es2017", "dom"],
    "sourceMap": true,
    "target": "es2017",
    "mapRoot": "./app",
    "outDir": "./dist",
    "baseUrl": "./",
    "module": "es6",
    "moduleResolution": "node",
    "typeRoots": [
      "../shared/node_modules/@types",
      "node_modules/@types"
    ],
    "include": ["app/**/*.ts"],
    "exclude": [
      "server",
      "shared",
      "node_modules"
    ]
  }
}
