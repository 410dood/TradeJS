{
  "compilerOptions": {
     "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "target": "es2015",
    "outDir": "./dist",
    "module": "es6",
    "moduleResolution": "node",
    "typeRoots": [
      "../shared/node_modules/@types",
      "node_modules/@types"
    ],
    "include": ["app/**/*.ts"],
    "exclude": [
      "server",
      "shared",
      "node_modules"
    ]
  },
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit" : true
  },
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "useTranspileModule": true,
    "doTypeCheck": true,
    "forkChecker": true
  }
}
