{
  "compilerOptions": {
    "allowJs": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "lib": [
      "es2017",
      "dom"
    ],
    "sourceMap": false,
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "genDir": "./aot",
    "comments": false,
    "entryModule": "./app/app.module#AppModule",
    "preserveWhitespaces": false,
    "skipMetadataEmit" : true
  }
}