{
  "appId": "com.example.app",
  "electronVersion": "1.6.6",
  "productName": "TradeJS",
  "artifactName": "${productName}.${ext}",
  "asar": true,
  "directories": {
    "app": "."
  },
  "files": [
    "*",
    "*/**",
    "package.json",
    "!**/gulpfile.js",
    "!_cache",
    "!_config",
    "!dist",
    "!custom/indicator/*",
    "!client/node_modules",
    "!client/assets",
    "!client/app",
    "!electron/node_modules",
    "!electron/assets",
    "!electron/tests",
    "!server/node_modules/**/*.ts",
    "!server/node_modules/**/*.map",
    "!server/node_modules/**/Makefile",
    "!server/node_modules/**/.npmignore",
    "!server/node_modules/**/*.md",
    "server/node_modules/@types/**/*.ts"
  ],
  "mac": {
    "target": "dmg",
    "icon": "./electron/assets/icon",
    "category": "your.app.category.type"
  },
  "win": {
    "target": "nsis",
    "icon": "./electron/assets/icon",
    "publisherName": "H.K.Brandsma"
  },
  "linux": {
    "target": "deb",
    "icon": "electron/assets/",
    "maintainer": "kewin@frontend-freelance.com"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "license": "license.txt",
    "allowElevation": true
  }
}