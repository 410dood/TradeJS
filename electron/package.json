{
  "name": "tradejs-desktop",
  "description": "TradeJS desktop wrapper",
  "version": "0.0.1",
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-rebuild",
    "start": "cross-env NODE_ENV=development electron ../",
    "build": "node builder",
    "build:windows": "./node_modules/.bin/build --win --projectDir=../",
    "build:windows2": "node packager --platform=win32",
    "build:mac": "node packager --platform=darwin",
    "build:linux": "node packager --platform=linux"
  },
  "devDependencies": {
    "cross-env": "4.0.0",
    "debug": "2.6.6",
    "electron": "1.6.6",
    "electron-builder": "17.1.2",
    "electron-prebuilt": "1.4.13",
    "electron-prebuilt-compile": "1.6.6",
    "electron-rebuild": "1.5.7",
    "minimist": "1.2.0",
    "mkdirp": "0.5.1"
  },
  "author": "Kewin Brandsma",
  "private": false,
  "build": {
    "asar": false,
    "appId": "your.id",
    "mac": {
      "category": "your.app.category.type"
    }
  },
  "dependencies": {
    "node-gyp": "3.6.1"
  }
}
