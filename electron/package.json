{
  "name": "tradejs-desktop",
  "description": "TradeJS desktop wrapper",
  "version": "0.0.1",
  "main": "main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron ../",
    "build": "node builder",
    "build:windows": "node builder --platform=windows",
    "build:mac": "node builder --platform=mac",
    "build:linux": "node builder --platform=linux",
    "rebuild-sqlite3:mac": "cd node_modules/sqlite3 && npm run prepublish && node-gyp configure --module_name=node_sqlite3 --module_path=../lib/binding/node-v47-darwin-x64 && node-gyp rebuild --target=0.36.4 --arch=x64 --target_platform=darwin --dist-url=https://atom.io/download/atom-shell --module_name=node_sqlite3 --module_path=../lib/binding/node-v53-darwin-x64"
  },
  "devDependencies": {
    "cross-env": "4.0.0",
    "debug": "2.6.6",
    "electron": "1.6.6",
    "electron-builder": "17.1.2",
    "electron-prebuilt": "1.4.13",
    "electron-prebuilt-compile": "1.6.6",
    "electron-rebuild": "1.5.7",
    "mkdirp": "0.5.1"
  },
  "author": "Kewin Brandsma",
  "private": false,
  "build": {
    "asar": false,
    "appId": "your.id",
    "mac": {
      "category": "your.app.category.type"
    }
  },
  "dependencies": {
    "node-gyp": "3.6.1"
  }
}
